<h3>Registration</h3>
{{#if error}}
    <h4 class="error">Something went wrong! Please try again.</h4>
{{/if}}
<form method="POST">
    <label for="first">First name:</label>
    <input type="text" name="first" autocomplete="off" required/>
    <br>
    <label for="last">Last name:</label>
    <input type="text" name="last" autocomplete="off" required/>
    <br>
    <label for="email">Email:</label>
    <input type="email" name="email" required>
    <br>
    <label for="pass">Password:</label>
    <input type="password" name="pass" required>
    {{!-- remember to use put this hidden input in every form --}}
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <br>
    <button class="submit-btn">Register</button>
    <p>Already registered? Click here to <a href="/login">login!</a></p>
</form>